@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Yeni Şifre Belirle";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg rounded-4 p-4 animate__animated animate__fadeIn" style="min-width: 400px;">
        <h3 class="text-center text-primary mb-4">
            <i class="bi bi-lock-fill me-2"></i> Yeni Şifre Belirle
        </h3>

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success text-center">
                <i class="bi bi-check-circle me-1"></i> @ViewBag.Success
            </div>
        }

        <form method="post" asp-action="ResetPassword" novalidate>
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
                <input asp-for="NewPassword" class="form-control" placeholder="Yeni şifrenizi girin" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Yeni Şifre (Tekrar)</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Tekrar girin" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 rounded-pill shadow-sm">
                <i class="bi bi-check2-square me-1"></i> Şifreyi Güncelle
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
