@model PasswordResetRequestViewModel
@{
    ViewData["Title"] = "Şifre Yenile";
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg rounded-4 p-4 animate__animated animate__fadeIn" style="min-width: 400px;">
        <h3 class="text-center text-primary mb-4">
            <i class="bi bi-envelope-lock-fill me-2"></i> Şifre Yenileme Bağlantısı
        </h3>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success text-center">
                <i class="bi bi-check-circle me-1"></i> @ViewBag.Message
            </div>
        }

        <form method="post" asp-action="ForgotPassword" novalidate>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" class="form-control" placeholder="ornek@mail.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill shadow-sm">
                <i class="bi bi-send-fill me-1"></i> Bağlantıyı Gönder
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
