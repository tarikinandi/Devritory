@model List<Blog>

<div class="card border-0 shadow-sm rounded-4 mb-4 latest-posts-card dark-mode-card">
    <div class="card-body p-4">
        <h5 class="fw-bold mb-4 text-primary border-bottom pb-2">
            <i class="bi bi-clock-history me-2"></i>Son Eklenen Yazılar
        </h5>

        @if (Model != null && Model.Any())
        {
            <ul class="list-unstyled mb-0">
                @foreach (var blog in Model)
                {
                    <li class="mb-4">
                        <a href="/Blog/@blog.Slug" class="d-flex align-items-start text-decoration-none latest-post-link">
                            <div class="flex-grow-1">
                                <h6 class="mb-1 fw-semibold text-dark">@blog.Title</h6>
                                <small class="text-muted">
                                    <i class="bi bi-calendar me-1"></i>
                                    @blog.PublishDate.ToString("dd MMM yyyy")
                                </small>
                            </div>
                        </a>
                        <hr class="mt-3 mb-0" />
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">Henüz blog yazısı bulunamadı.</p>
        }
    </div>
</div>

<style>
    .latest-posts-card {
        background: linear-gradient(145deg, #ffffff, #f1f4ff);
    }

    .latest-post-link {
        transition: all 0.2s ease;
        border-radius: 8px;
        padding: 6px 8px;
    }

        .latest-post-link:hover {
            background-color: #f0f4ff;
            color: #0d6efd;
        }

        .latest-post-link h6 {
            margin-bottom: 4px;
            font-size: 0.95rem;
        }

    /* Dark Mode uyarlamaları */
    body.dark-mode .latest-posts-card {
        background: #1e1e1e !important;
        color: #fff !important;
    }

    body.dark-mode .latest-post-link h6 {
        color: #ddd;
    }

    body.dark-mode .latest-post-link:hover {
        background-color: #2b2b2b !important;
        color: #90caf9 !important;
    }

    body.dark-mode hr {
        border-color: #444;
    }

    body.dark-mode small.text-muted {
        color: #bbb !important;
    }
</style>
