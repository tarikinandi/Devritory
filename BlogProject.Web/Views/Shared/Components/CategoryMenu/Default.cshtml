@model List<Category>

<div class="card border-0 shadow-sm rounded-4 mb-4 dark-mode-card">
    <div class="card-body p-4">
        <h5 class="fw-bold mb-4 border-bottom pb-2 text-primary">
            <i class="bi bi-tags-fill me-2 text-primary"></i>Kategoriler
        </h5>

        @if (Model != null && Model.Any())
        {
            <ul class="list-group list-group-flush">
                @foreach (var category in Model)
                {
                    <li class="list-group-item px-0 py-2 border-0 bg-transparent">
                        <a href="/Blog/Category/@category.Id" class="d-flex justify-content-between align-items-center text-decoration-none fw-medium category-link">
                            <span>@category.Name</span>
                            <i class="bi bi-chevron-right small text-muted"></i>
                        </a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">Kategori bulunamadı.</p>
        }
    </div>
</div>

<style>
    .category-link {
        transition: all 0.2s ease;
        padding: 0.4rem 0.6rem;
        border-radius: 8px;
        color: #212529;
    }

        .category-link:hover {
            background-color: #f0f4ff;
            color: #0d6efd;
        }

    body.dark-mode .category-link {
        color: #ddd !important;
    }

        body.dark-mode .category-link:hover {
            background-color: #2b2b2b !important;
            color: #90caf9 !important;
        }

    body.dark-mode .dark-mode-card {
        background-color: #1e1e1e;
        color: #fff;
    }

    body.dark-mode .list-group-item {
        background-color: transparent !important;
    }
</style>
